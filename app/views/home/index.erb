  <div>
    <h2 class="text-center">Welcome to Rails Library</h2>
    <% if !current_user.nil? %>
      <h2 class="text-center"><%= "Welcome back, " + current_user.full_name %></h2>
    <% end %>
    <div>
      <h2 class="text-center">Our Most Recent Books</h2>
      <ul>
        <% @books.each do |book| %>
          <li class="text-center"><%= link_to book.name, books_path(:id => book.id) %></li>
        <% end %>  
      </ul>
      <h2 class="text-center">Checked Out Books</h2>
      <% if @checkout_records && !@checkout_records.empty?%>
      <ul>
        <% @checkout_records.each do |record| %>
          <li class="text-center"><%= record.book.name %>
          <%= button_to("Return", "checkout_records?id=#{record.id}", :method => :patch)%></li>
        <% end %>  
      </ul>
      <% else %>
        <h3 class="text-center">No books currently checked out</h3>
      <% end %>
      <h2 class="text-center">Reserved Books</h2>
      <% if @reserve_records && !@reserve_records.empty?%>
        <ul>
          <% @reserve_records.each do |record| %>
            <li class="text-center"><%= record.book.name %>
            <%= button_to("Return", "reserve_records?id=#{record.id}", :method => :patch)%></li>
          <% end %>  
        </ul>
      <% else %>
        <h3 class="text-center">No books currently reserved</h3>
      <% end %>
    </div>
  </div> 